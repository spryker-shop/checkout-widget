{% extends template('widget') %}

{% define data = {
    isVisible: _widget.isVisible
} %}

{% block template %}
    {% if data.isVisible %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    <a class="button button--expand button--success" href="{{ url('checkout-index') }}" {{qa('cart-go-to-checkout')}}>
        {{ 'cart.checkout' | trans }}
    </a>
{% endblock %}

